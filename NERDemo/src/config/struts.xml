<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

<!-- 将Action的创建交给spring来管理 -->
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.multipart.maxSize" value="2000000000" /><!-- 2000MB -->
	<!-- 更改struts2请求Action的后缀名，默认为action。若想去掉后缀，设为","即可 <constant name="struts.action.extension" 
		value=","></constant> -->


	<!-- 包含的配置文件 -->
    <include file="config/struts-user.xml"></include>
</struts>    
